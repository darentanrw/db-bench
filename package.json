{
  "name": "cursor-convex-video",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all -p dev:backend \"wait-on http://localhost:5555 && npm run dev:backend-node\" dev:frontend",
    "dev:frontend": "vite --open",
    "dev:backend": "convex dev",
    "build": "tsc -b && vite build",
    "build:server": "tsc -p server/tsconfig.json",
    "lint": "tsc && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "dev:backend-node": "nodemon --watch server --ignore server/dist --exec \"npm run build:server && node server/dist/index.js\"",
    "clean": "rm -rf node_modules/.vite"
  },
  "dependencies": {
    "convex": "^1.27.0",
    "express": "^4.19.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "dotenv": "^16.4.5",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@convex-dev/eslint-plugin": "^1.0.0",
    "@eslint/js": "^9.21.0",
    "@tailwindcss/vite": "^4.0.14",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.0.14",
    "ts-node": "^10.9.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "wait-on": "^7.2.0"
  }
}
